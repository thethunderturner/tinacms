{
  "extends": "../../../base.tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "ESNext"
    ],
    "types": [
      "vite/client", "node"
    ],
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src",
    "vite-env.d.ts"
  ]
}
